<!-- views/patient_views.xml -->
<odoo>
    <data>
        <record model="ir.ui.view" id="view_patient_form">
            <field name="name">hospital.patient.form</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="symptoms"/>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>
