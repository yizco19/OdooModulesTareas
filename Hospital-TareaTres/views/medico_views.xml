<odoo>
    <data>
        <!-- View for Paciente Form -->
        <record model="ir.ui.view" id="view_paciente_form">
            <field name="name">hospital.paciente.form</field>
            <field name="model">hospital.paciente</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="nombre"/>
                        <field name="apellido"/>
                        <field name="sintoma"/>
                        <!-- Include additional fields if needed -->
                    </group>
                </form>
            </field>
        </record>

        <!-- Action for Paciente -->
        <record model="ir.actions.act_window" id="action_medico">
            <field name="name">Medico</field>
            <field name="res_model">hospital.medico</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu Item for Paciente -->
        <menuitem id="menu_medico"
                  name="Medico"
                  parent="hospital_menu_root"
                  action="action_medico"/>




    </data>
</odoo>
