<!-- archivo: biblioteca_socio_views.xml -->
<odoo>
    <data>
        <!-- Vista de formulario para biblioteca.socio -->
        <record id="view_biblioteca_socio_form" model="ir.ui.view">
            <field name="name">biblioteca.socio.form</field>
            <field name="model">biblioteca.socio</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="nombre"/>
                        <field name="apellido"/>
                        <field name="identificador"/>
                        <!-- Otros campos que puedas tener en el modelo -->
                    </group>
                </form>
            </field>
        </record>

        <!-- Vista de lista para biblioteca.socio -->
        <record id="view_biblioteca_socio_tree" model="ir.ui.view">
            <field name="name">biblioteca.socio.tree</field>
            <field name="model">biblioteca.socio</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="nombre"/>
                    <field name="apellido"/>
                    <field name="identificador"/>
                    <!-- Otros campos que puedas tener en el modelo -->
                </tree>
            </field>
        </record>
        
    <!-- Definimos como mostramos la vista en el modelo -->
    <record id='biblioteca_socio_action' model='ir.actions.act_window'>
        <field name="name">Socio</field>
        <!-- Indicamos a que modelo aplica -->
        <field name="res_model">biblioteca.socio</field>
        <!-- Indicamos que los comics pueden verse en tree para el listado,
            y en form para la creación/edición -->
        <field name="view_mode">tree,form</field>
    </record>
    </data>
        <!--Root-->
        <menuitem name="Biblioteca ZY" id="biblioteca_base_menu" />
        <menuitem name="Socio" id="biblioteca_socio" parent="biblioteca_base_menu" action="biblioteca_socio_action"/>
</odoo>
